{
  "compilerOptions": {
    "target": "es2016",

    /* Modules */
    "module": "commonjs",                               
    "rootDir": "./src",                                
    "outDir": "./build",                                   
    "removeComments": true,

    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,      

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
